@model SalesWebMvc.Models.Vendedor
@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedores</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name" class="form-control"></label>
                <input asp-for="Name" class="form-control" />
            </div>  
            <div class="form-group">
                <label asp-for="Email" class="form-control"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DataNasc" class="form-control"></label>
                <input asp-for="DataNasc" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SalarioBase" class="form-control"></label>
                <input asp-for="SalarioBase" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

