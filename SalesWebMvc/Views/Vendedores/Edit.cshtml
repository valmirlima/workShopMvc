
@model SalesWebMvc.Models.ViewModels.SellerFormViewModel;
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedores</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="vendedor.Id" />
            <div class="form-group">
                <label asp-for="vendedor.Name" class="form-control"></label>
                <input asp-for="vendedor.Name" class="form-control" />
                <span asp-validation-for="vendedor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.Email" class="form-control"></label>
                <input asp-for="vendedor.Email" class="form-control" />
                <span asp-validation-for="vendedor.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.DataNasc" class="form-control"></label>
                <input asp-for="vendedor.DataNasc" class="form-control" />
                <span asp-validation-for="vendedor.DataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.SalarioBase" class="form-control"></label>
                <input asp-for="vendedor.SalarioBase" class="form-control" />
                <span asp-validation-for="vendedor.SalarioBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="vendedor.DepartamentoId" class="form-control"></label>
                <select asp-for="vendedor.DepartamentoId" asp-items="@(new SelectList(Model.departamentos, "Id","Name"))"
                        class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


